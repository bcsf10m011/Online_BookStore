	</head>
	<body id="page3">
	<!--==============================header=================================-->
		
	<!--==============================content================================-->
		<section id="content">
			<div class="main">
				<div class="indent-left">
					<h3>Search Results</h3> 
                      <div id="searchResult"></div> 
                   
					  @{int i = 0;
                   
                    for (i = 0; i < Model.Count; i++ )
                    {

                       
                  
              
					<div class="wrapper margin-bot">
						<article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200" /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/home/addToCart/@Model[i].Id">Add to Cart</a>
						</article>
						@{i++;
                            if (i == Model.Count)
                            { break; }
                    }
			            <article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt=""  width="150" height="200"  /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/home/addToCart/@Model[i].Id">Add to Cart</a>
						</article>
						@{i++;
                            if (i == Model.Count)
                                { break; }
                        }
			
                        <article class="col-2">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt=""  width="150" height="200"  /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/home/addToCart/@Model[i].Id">Add to Cart</a>
						</article>
					
			
                    </div> 
               
                    } }
				</div>
			</div>
		</section>
	<!--==============================footer=================================-->
		
		<script type="text/javascript"> Cufon.now(); </script>
	</body>
</html>
