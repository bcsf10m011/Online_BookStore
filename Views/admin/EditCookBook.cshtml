								<fieldset  >
									
                                  <form id="contact-form" method ="post" action="EditCookBook" enctype="multipart/form-data">
                                      <label>
                                         
                                          @Html.HiddenFor(model => model.Id)
                                        <input type="text" name="name" value="@Model.Name" onBlur="if(this.value=="") this.value="@Model.Name"" onFocus="if(this.value =="@Model.Name" ) this.value=""" />
                                       
                                      </label>
                                      <label>

                                           <input type="text" name="chef" value="@Model.chef" onBlur="if(this.value=='') this.value='@Model.chef'" onFocus="if(this.value =='@Model.chef' ) this.value=''" />

                                      </label>
                                    
                                      <label>
                                           
                                         <input type="text" name="price" value="@Model.Price" onBlur="if(this.value=='') this.value='@Model.Price'" onFocus="if(this.value =='@Model.Price' ) this.value=''" />
                                      
                                      @Html.HiddenFor(model=>model.Picture)
                                      </label>
                                      
                                      <div class="buttons-wrapper"><input type="submit" class="button" value ="Save Changes!" />

                                      </div>

                                  </form>
                                   
                                    
