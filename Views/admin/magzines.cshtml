 @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">

        $(document).ready(function () {

            var value = $('#search').val();


            $('#srchbtn').click(function () {

                alert("hello");
               

                $getJSON("~/home/getSearchMagzine?key=" + value, function (data) {
                  //  alert("hello ");
                    $('#searchResult').append('<th><td>Name</td><td>Author</td><td>Price</td></th>');

                    $.each(data, function (i, item) {

                        $('#searchResult').append('<tr><td>' + item.Name + '</td><td>' + item.Author + '</td><td>' + item.Price + '</td></tr>');
                    });
                });


            });

        });


    </script>


	</head>
	<body id="page3">
	<!--==============================header=================================-->
		
	<!--==============================content================================-->
		<section id="content">
			<div class="main">
				<div class="indent-left">
					<h3>Magzines &nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;
                         &nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;                       
                        
                         <input  type="text" id="search" value="Search" size="20" >
                            <input type="button" id="srchbtn" value="Search!"/>
                            </h3>
                      <div id="searchResult"></div> 
                   
					  @{int i = 0;
                   
                    for (i = 0; i < Model.Count; i++ )
                    {

                       
                  
              
					<div class="wrapper margin-bot">
						<article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200" /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/admin/EditMagzine/@Model[i].Id">Edit</a>
                             <a class="button" href="~/admin/DeleteMagzine/@Model[i].Id">Delete</a>
						</article>
						@{i++;
                            if (i == Model.Count)
                            { break; }
                    }
			            <article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200"  /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/admin/EditMagzine/@Model[i].Id">Edit</a>
						    <a class="button" href="~/admin/DeleteMagzine/@Model[i].Id">Delete</a>
                        </article>
						@{i++;
                            if (i == Model.Count)
                                { break; }
                        }
			
                        <article class="col-2">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200"  /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Issue: @Model[i].Month<br/>Rs.@Model[i].Price/=</p>
							<a class="button" href="~/admin/EditMagzine/@Model[i].Id">Edit</a>
                            <a class="button" href="~/admin/DeleteMagzine/@Model[i].Id">Delete</a>
						</article>
					
			
                    </div> 
               
                    } }
				</div>
			</div>
		</section>
