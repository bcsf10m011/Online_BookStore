	@Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">

        $(document).ready(function () {




            $('#srchbtn').click(function () {
                var a = $('#Search').val();
                alert("hello " + a);


                $.getJSON("getSearchNewsLetter?key=" + a, function (data) {
                    //  alert("hello ");
                    //  $('#searchResult').append('<th><td>Name</td><td>Author</td><td>Price</td></th>');

                    $.each(data, function (i, item) {

                        $('#il').remove();

                        $('#searchResult').append('<fieldset><legend><b>Search Result</b></legend><br/><br/><article class="col-1"><div class="prev-indent-bot"><figure class="img-border"><a href="#"><img src=../images/' + item.Picture + ' alt="" width="150" height="200" /></a></figure><div class="clear"></div></div><h6>' + item.Name + '</h6><p class="p2">Issue: ' + item.Month + '<br/>Rs.' + item.Price + '/=</p><a class="button" href="addToCart/"' + item.id + '>Add to Cart</a></article></fieldset>');
                    });
                });


            });

        });


    </script>
    


	</head>
	<body id="page3">
	<!--==============================header=================================-->
		
	<!--==============================content================================-->
		<section id="content">
			<div class="main">
                <div id="searchResult"></div> 
				<div id="il" class="indent-left">
					<h3>NewsLetters</h3>

                     &nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;
                         &nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;                       
                       <form> 
                          @Html.TextBox("Search")
                            <input type="button" id="srchbtn" value="Search!"/>
                         </form>
                    for (i = 0; i < Model.Count; i++ )
                    {

                       
                  
              
					<div class="wrapper margin-bot">
						<article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200" /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Rs.@Model[i].Price/=</p>
							<a class="button" href="~/customer/AddNewsletterToCart/@Model[i].Id">Add to Cart</a>
						</article>
						@{i++;
                            if (i == Model.Count)
                            { break; }
                    }
			            <article class="col-1">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200" /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Rs.@Model[i].Price/=</p>
							<a class="button" href="~/customer/AddNewsletterToCart/@Model[i].Id">Add to Cart</a>
						</article>
						@{i++;
                            if (i == Model.Count)
                                { break; }
                        }
			
                        <article class="col-2">
							<div class="prev-indent-bot">
								<figure class="img-border"><a href="#"><img src=~/images/@Model[i].Picture alt="" width="150" height="200" /></a></figure>
								<div class="clear"></div>
							</div>
							<h6>@Model[i].Name</h6>
							<p class="p2">Rs.@Model[i].Price/=</p>
							<a class="button" href="~/customer/AddNewsletterToCart/@Model[i].Id">Add to Cart</a>
						</article>
					
			
                    </div> 
               
                    } }
				</div>
			</div>
		</section>
	<!--==============================footer=================================-->
		
		<script type="text/javascript"> Cufon.now(); </script>
	</body>
</html>
